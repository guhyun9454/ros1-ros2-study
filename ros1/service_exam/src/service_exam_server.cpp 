#include "ros/ros.h"
#include "service_exam/myservice.h"

bool server_callback(service_exam::myservice::Request &req, service_exam::myservice::Response &res)
{
  res.result = req.a + req.b;
  ROS_INFO("request: x=%ld, y=%ld", (long int)req.a, (long int)req.b);
  ROS_INFO("sending back response: [%ld]", (long int)res.result);
  return true;
}

int main(int argc, char **argv)
{
  ros::init(argc, argv, "service_exam_server");
  ros::NodeHandle n;

  ros::ServiceServer service = n.advertiseService("my_service", server_callback);
  ROS_INFO("my_service: ready");
  ros::spin();

  return 0;
}